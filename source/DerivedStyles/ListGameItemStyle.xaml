    <Style x:Key="PreviewGrid_1" TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Visibility" Value="Collapsed"/>
        <Setter Property="MaxHeight" Value="300"/>
        <Setter Property="MaxWidth" Value="300"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Grid Margin="5" d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameIntance}">
                        <Image RenderOptions.BitmapScalingMode="Fant" Height="{TemplateBinding MaxHeight}" Width="{TemplateBinding MaxWidth}" StretchDirection="Both" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="{Settings CoverArtStretch}">
                            <Image.Source>
                                <PriorityBinding>
                                    <Binding Path="CoverImageObject" Mode="OneWay" Converter="{StaticResource NullToDependencyPropertyUnsetConverter}"/>
                                    <Binding Path="DefaultCoverImageObject" Mode="OneWay" />
                                </PriorityBinding>
                            </Image.Source>
                        </Image>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="ListBox.AlternationIndex" Value="0">
                            <Setter Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="ListBox.AlternationIndex" Value="1">
                            <Setter Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="ListBox.AlternationIndex" Value="2">
                            <Setter Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="ListBox.AlternationIndex" Value="3">
                            <Setter Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="ListBox.AlternationIndex" Value="4">
                            <Setter Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="ListBox.AlternationIndex" Value="5">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Setter Property="Margin" Value="1000,0,0,0"/>
                        </Trigger>

                        <DataTrigger Binding="{Settings GridItemHeightRatio}" Value="1">
                            <Setter Property="MaxHeight" Value="310" />
                            <Setter Property="MaxWidth" Value="310" />
                        </DataTrigger>
                        <DataTrigger Binding="{Settings GridItemHeightRatio}" Value="4">
                            <Setter Property="MaxHeight" Value="267" />
                            <Setter Property="MaxWidth" Value="200" />
                        </DataTrigger>
                        <DataTrigger Binding="{Settings GridItemHeightRatio}" Value="3">
                            <Setter Property="MaxHeight" Value="300" />
                            <Setter Property="MaxWidth" Value="200" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

